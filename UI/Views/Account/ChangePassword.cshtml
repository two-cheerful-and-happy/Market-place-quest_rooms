@model Domain.ViewModels.Account.ChangingAccountPasswordViewModel
@{
}
@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
    <input type="text" asp-for="Id" hidden>
    <div class="mb-3">
        <label class="form-label">Password:</label>
        <div>
            <input type="password" class="form-control" asp-for="Password">
            <span class="text-danger" asp-validation-for="Password" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label">Password сonfirm:</label>
        <div>
            <input type="password" class="form-control" asp-for="PasswordConfirm">
            <span class="text-danger" asp-validation-for="PasswordConfirm" data-valmsg-replace="true"></span>
        </div>
    </div>
    <button>Submit</button>
}