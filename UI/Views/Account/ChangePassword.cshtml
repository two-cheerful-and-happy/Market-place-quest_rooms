@model Domain.ViewModels.Account.ChangingAccountPasswordViewModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/modal.css">
    <title>Nightmares</title>
</head>
<body>
    <div id="overlay"></div>
    <div class="popup">
        <div class="form-popup">
            <div class="form-element">
                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
                {
                    <input asp-for="Id" hidden>
                    <div class="form-element">
                        <label asp-for="Password" class="form-label">New password</label>
                        <input asp-for="Password" type="password" class="form-control">
                        <span class="text-danger" asp-validation-for="Password" data-valmsg-replace="true"></span>
                    </div>
                    <div class="form-element">
                        <label asp-for="PasswordConfirm" class="form-label">Confirm new password</label>
                        <input asp-for="PasswordConfirm" type="password" class="form-control">
                        <span class="text-danger" asp-validation-for="PasswordConfirm" data-valmsg-replace="true"></span>
                    </div>
                    <div class="form-element">
                        <button type="submit">Submit</button>
                    </div>
                }
            </div>
            <div class="form-element">
                <button type="button" onclick="redirectToPage()">Go to the main page</button>
            </div>
        </div>
    </div>
    <script>

        const overlay = document.querySelector("#overlay");
        const modal = document.querySelector(".popup");

        $(document).ready(function () {
            overlay.style.display = "block";
            modal.classList.add("active");
        });

        function redirectToPage() {
            window.location.href = '@Url.Action("Index", "Map")';
        }
    </script>
</body>
</html>