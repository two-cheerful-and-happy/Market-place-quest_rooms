@using Domain.Enums
@model Domain.ViewModels.Account.CreateRequestToChangingRoleViewModel
@{
}
<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/smoothness/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js"></script>
</head>
<body>
    <div class="modal" id="Popup" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                </div>
                <div class="modal-body">
                    <div id="CreateRequestToChangingRoleModal">
                        @using (Html.BeginForm("SubmitRequestOnChangingRole", "Account", FormMethod.Post))
                        {
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="mb-3">
                                <label class="form-label">Requested role:</label>
                                <div class="col-12">
                                    <label class="visually-hidden" for="specificSizeSelect">Preference</label>
                                    <select asp-for="@Model.RequestedRole" asp-items="Html.GetEnumSelectList<Role>()" class="form-select">
                                        <option value="@Model.RequestedRole">@Model.RequestedRole</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description or reasone:</label>
                                <div>
                                    <input type="text" class="form-control" asp-for="Description">
                                </div>
                            </div>
                            <button>Submit</button>
                            <button type="button" onclick="redirectToPage()">Close</button>
                        }
                    </div>
                </div>
                </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#Popup').modal('show');
        });
        function redirectToPage() {
            window.location.href = '@Url.Action("Profile", "Account")';
        }
    </script>            
</body>
</html>