@using Domain.Enums
@model Domain.ViewModels.Account.RegistrationViewModel
@{
}

@using (Html.BeginForm("Registration", "Account", FormMethod.Post))
{
    <div class="mb-3">
        <div>
            <label class="form-label">Email address</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="enter the email"/>
            <span class="text-danger" asp-validation-for="Email" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label">Login:</label>
        <div>
            <input type="text" class="form-control" asp-for="Login">
            <span class="text-danger" asp-validation-for="Login" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="col-12">
        <label class="form-labe" for="specificSizeSelect">Choose role</label>
        <select asp-for="Role" asp-items="Html.GetEnumSelectList<RoleForRegistrationPage>()" class="form-select">
            <option value="Choose">Choose</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label" >Password:</label>
        <div>
            <input type="password" asp-for="Password" class="form-control">
            <span class="text-danger" asp-validation-for="Password" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" >Password confirm:</label>
        <div>
            <input type="password" asp-for="PasswordConfirm" class="form-control">
            <span class="text-danger" asp-validation-for="PasswordConfirm" data-valmsg-replace="true"></span>
        </div>
    </div>
    <button>Submit</button>
}
