@model Domain.ViewModels.AdminPanel.PanelViewModel 
@{
}
<div class="text-center" role="alert">
    <div class="row justify-content-center">
        <h1 style="align-content:center">Administration panel</h1>
    </div>
</div>

<form method="get">
    <div class="form-field">
        <div class="row">
            <div class="col">
                <label class="form-label">Login:</label>
                <input name="login" type="text" class="form-control" value="@Model.FilterUserMangeViewModel.SelectedLogin" placeholder="Login" aria-label="First name">
            </div>
            <div class="col">
                <label class="form-label">Role:</label>
                <select class="form-control" asp-items="@Model.FilterUserMangeViewModel.Roles" name="role"></select>
            </div>
        </div>
        <br />
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>
<div class="table">
    <table id="myTable" class="table table-bordered table-hover table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Role</th>
                <th>View</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null)
                {
                    foreach (var Data in Model.Accounts)
                    {
                        <tr>
                            <td>@Data.Id</td>
                            <td>@Data.Login</td>
                            <td>@Data.Role</td>
                            <td>
                                <button type="submit" class="btn btn-sm btn-primary" onclick="openModalForm({ url: '@Url.Action("GetUserCard", "AdminPanel")', data: @Data.Id })">
                                    Show
                                </button>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>

<div class="form-field">
    @if (Model.PageViewModel.HasPreviousPage)
    {
        <a class="btn btn-primary"
       asp-action="Panel"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       role="button">
            back
        </a>
    }
    @if (Model.PageViewModel.HasNextPage)
    {
        <a class="btn btn-primary"
       asp-action="Panel"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       role="button">
            next
        </a>
    }
</div>